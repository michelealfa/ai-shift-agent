# Configuration for AI Shift Agent v2.0

# Core Configuration
# Used for session signing and internal cryptography
SECRET_KEY=your_generate_secret_key_here

# AI Configuration (Gemini)
# Get your key at https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here
VISION_MODEL=gemini-2.0-flash
NLP_MODEL=gemini-2.0-flash

# Google Maps API
# Required for travel time estimation
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Database Configuration
# PostgreSQL 16
DATABASE_URL=postgresql://shift_user:your_secure_password@postgres:5432/shift_agent
DB_PASSWORD=your_secure_password_here

# Redis & Celery
# Used for caching and async traffic jobs
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_DB=1

# Security
# Internal API key for system tasks/admin (optional in v2.0 as we use per-user keys)
INTERNAL_API_KEY=your_static_api_key_here

# Admin / Initial Setup
# Initial user to create during first run
TARGET_USER_NAME=CARLO
TARGET_USER_EMAIL=carlo@example.com
